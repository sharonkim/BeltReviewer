<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>

<h3>Edit Your Profile</h3>
<form action="/users/<%= current_user.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%=  form_authenticity_token%>">
	<p>First Name: <input type="text" name="user[first_name]" value="<%= @user.first_name %>"></p>
	<p>Last Name: <input type="text" name="user[last_name]" value="<%=  @user.last_name %>"></p>
	<p>Email: <input type="text" name="user[email]" value="<%= @user.email %>"></p>
	<p>City: <input type="text" name="user[city]" value="<%= @user.city %>"></p>
	<select name="user[state]">
		<% CS.states(:us).each do |state| %>
			<option value="<%= state %>"><%= @user.state %></option>
		<% end %>
	</select>
	<input type="submit" value="Update Records">
</form>
